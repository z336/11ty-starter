{
  "name": "11ty-starter",
  "version": "1.0.0",
  "description": "Basic starter for 11ty sites.",
  "main": "index.html",
  "scripts": {
    "watch:sass": "sass  --no-source-map --watch src/assets/sass/style.scss:_site/assets/css",
    "watch:eleventy": "eleventy --serve --incremental",
    "build:sass-site": "sass  --no-source-map src/assets/sass/style.scss _site/assets/css/style.css",
    "build:sass": "npm-run-all --parallel build:sass-site",
    "build:eleventy": "eleventy",
    "postbuild": "postcss _site/assets/css/*.css -u autoprefixer cssnano -r --no-map",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:sass build:eleventy"
  },
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "autoprefixer": "^10.4.13",
    "clean-css": "^5.3.1",
    "code-tag": "^1.1.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.14",
    "js-yaml": "^4.1.0",
    "luxon": "^3.1.1",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-scss": "^4.0.6",
    "sass": "^1.54.9"
  },
  "browserslist": [
    "> 0.25%",
    "not IE 11"
  ]
}
